<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/soft_gradient_background"
    android:padding="32dp">

    <!-- Header -->
    <TextView
        style="@style/SwissText.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BROWSER"
        android:textSize="36sp"
        android:layout_marginBottom="8dp" />

    <TextView
        style="@style/SwissText.Subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Web content viewer"
        android:layout_marginBottom="48dp" />

    <!-- Content Display -->
    <TextView
        style="@style/SwissText.Body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WEB CONTENT"
        android:layout_marginBottom="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sketch_input_field_selector"
        android:padding="2dp">

        <TextView
            android:id="@+id/browserTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/swiss_near_black"
            android:fontFamily="monospace"
            android:padding="16dp"
            android:text="Loading content..." />

    </ScrollView>

</LinearLayout>
