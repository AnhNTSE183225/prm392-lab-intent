<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/cyberpunk_background"
    android:padding="16dp">

    <!-- Header Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cyberpunk_card_background"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SYSTEM OVERRIDE"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/cyber_neon_orange"
            android:fontFamily="monospace"
            android:layout_marginBottom="8dp"
            android:shadowColor="@color/cyber_neon_orange"
            android:shadowRadius="8"
            android:shadowDx="0"
            android:shadowDy="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SELECT TARGET SYSTEM"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="monospace"
            android:letterSpacing="0.1"
            android:gravity="center" />

    </LinearLayout>

    <!-- Selection Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cyberpunk_card_background"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="// SELECT PROTOCOL //"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/cyber_neon_green"
            android:fontFamily="monospace"
            android:layout_marginBottom="12dp" />

        <Spinner
            android:id="@+id/intentSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cyberpunk_input_background"
            android:minHeight="48dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />

    </LinearLayout>

    <!-- Execute Button -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/CyberpunkButtonStyle"
        android:onClick="onClick"
        android:text="[EXECUTE PROTOCOL]" />

</LinearLayout>
