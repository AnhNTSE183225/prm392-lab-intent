<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/soft_gradient_background"
    android:padding="32dp">

    <!-- Header -->
    <TextView
        style="@style/SwissText.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INTENTS"
        android:textSize="36sp"
        android:layout_marginBottom="8dp" />

    <TextView
        style="@style/SwissText.Subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Implicit intent selection"
        android:layout_marginBottom="48dp" />

    <!-- Intent Selection -->
    <TextView
        style="@style/SwissText.Body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SELECT INTENT TYPE"
        android:layout_marginBottom="16dp" />

    <Spinner
        android:id="@+id/intentSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sketch_input_field_selector"
        android:layout_marginBottom="36dp"
        android:minHeight="48dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp" />

    <Button
        android:id="@+id/triggerButton"
        style="@style/SwissButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Launch Intent" />

</LinearLayout>
