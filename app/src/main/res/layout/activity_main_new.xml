<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/soft_gradient_background">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        tools:context=".MainActivity">

        <!-- Title Section -->
        <TextView
            android:id="@+id/titleText"
            style="@style/SwissText.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INTENT"
            android:textSize="36sp"
            android:layout_marginBottom="8dp" />

        <TextView
            style="@style/SwissText.Subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Android Intent Demo"
            android:layout_marginBottom="48dp" />

        <!-- Input Section -->
        <TextView
            style="@style/SwissText.Body"
            android:layout_width="match_parent" 
            android:layout_height="wrap_content"
            android:text="MESSAGE"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/inputforintent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sketch_input_field_selector"
            android:text="First Activity"
            android:textSize="16sp"
            android:textColor="@color/swiss_near_black"
            android:hint="Enter your message here"
            android:fontFamily="sans-serif"
            android:minHeight="48dp"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="48dp" />

        <!-- Exercise Buttons Section -->
        <TextView
            style="@style/SwissText.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EXERCISES"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/startintent"
            style="@style/SwissButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:onClick="onClick"
            android:text="Exercise 6: Explicit Intent" />

        <Button
            android:id="@+id/sharebutton"
            style="@style/SwissButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:onClick="shareData"
            android:text="Exercise 7: Share Data" />

        <Button
            android:id="@+id/openBrowserButton"
            style="@style/SwissButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:onClick="openBrowser"
            android:text="Exercise 8: Open Browser" />

        <Button
            android:id="@+id/pickImageButton"
            style="@style/SwissButton.Accent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:onClick="pickImage"
            android:text="Exercise 9: Pick Image" />

        <Button
            android:id="@+id/implicitIntentsButton"
            style="@style/SwissButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:onClick="showImplicitIntents"
            android:text="Exercise 10: Implicit Intents" />

        <!-- Image Display Section -->
        <TextView
            style="@style/SwissText.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SELECTED IMAGE"
            android:layout_marginBottom="16dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/selectedImage"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:background="@drawable/sketch_image_frame"
                android:scaleType="centerInside"
                android:visibility="gone" />

            <TextView
                style="@style/SwissText.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No image selected"
                android:layout_gravity="center" />
        </FrameLayout>

    </LinearLayout>

</ScrollView>
