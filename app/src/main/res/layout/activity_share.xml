<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/soft_gradient_background"
    android:padding="32dp">

    <!-- Header -->
    <TextView
        style="@style/SwissText.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SHARE"
        android:textSize="36sp"
        android:layout_marginBottom="8dp" />

    <TextView
        style="@style/SwissText.Subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Content received from other apps"
        android:layout_marginBottom="48dp" />

    <!-- Content Display -->
    <TextView
        style="@style/SwissText.Body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SHARED CONTENT"
        android:layout_marginBottom="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/shareTextView"
            style="@style/SwissText.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sketch_input_field_selector"
            android:padding="16dp"
            android:text="Waiting for shared content..." />

    </ScrollView>

</LinearLayout>
