<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/soft_gradient_background"
    android:padding="24dp">

    <!-- Header Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sketch_card_background"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“¤ Share Catcher"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/soft_black"
            android:fontFamily="serif"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Catching magical messages from other apps!"
            android:textSize="14sp"
            android:textColor="@color/dark_gray"
            android:fontFamily="serif"
            android:textStyle="italic"
            android:gravity="center" />

    </LinearLayout>

    <!-- Content Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sketch_card_background"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’Œ Shared Content:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/soft_black"
            android:fontFamily="serif"
            android:layout_marginBottom="16dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/shareTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/soft_black"
                android:fontFamily="serif"
                android:padding="16dp"
                android:background="@color/pastel_mint"
                android:text="ðŸ“© Waiting for shared content..." />

        </ScrollView>

    </LinearLayout>

</LinearLayout>
