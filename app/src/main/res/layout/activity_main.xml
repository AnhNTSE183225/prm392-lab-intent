<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cyberpunk_background">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        tools:context=".MainActivity">

        <!-- Title Card -->
        <LinearLayout
            android:id="@+id/titleCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cyberpunk_card_background"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:padding="16dp">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚡ NEURAL LINK ⚡"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/cyber_neon_blue"
                android:gravity="center"
                android:fontFamily="monospace"
                android:layout_marginBottom="8dp"
                android:shadowColor="@color/cyber_neon_blue"
                android:shadowRadius="8"
                android:shadowDx="0"
                android:shadowDy="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SYSTEM v2.077 // INTENT INTERFACE"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:fontFamily="monospace"
                android:letterSpacing="0.1" />

        </LinearLayout>

        <!-- Input Section -->
        <LinearLayout
            android:id="@+id/inputSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleCard"
            android:background="@drawable/cyberpunk_card_background"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="// DATA INPUT TERMINAL //"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/cyber_neon_yellow"
                android:fontFamily="monospace"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/inputforintent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cyberpunk_input_background"
                android:text="First Activity"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:hint="ENTER COMMAND SEQUENCE..."
                android:fontFamily="monospace"
                android:minHeight="48dp"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

        </LinearLayout>

        <!-- Exercise Buttons Section -->
        <LinearLayout
            android:id="@+id/buttonsSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inputSection"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:background="@drawable/cyberpunk_card_background"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SELECT OPERATION MODE"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/cyber_neon_green"
                android:fontFamily="monospace"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center" />

            <Button
                android:id="@+id/startintent"
                style="@style/CyberpunkButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="[EX-06] DIRECT NEURAL LINK" />

            <Button
                android:id="@+id/sharebutton"
                style="@style/CyberpunkButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="shareData"
                android:text="[EX-07] DATA BROADCAST" />

            <Button
                android:id="@+id/openBrowserButton"
                style="@style/CyberpunkButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="openBrowser"
                android:text="[EX-08] NET RUNNER" />

            <Button
                android:id="@+id/pickImageButton"
                style="@style/CyberpunkButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="pickImage"
                android:text="[EX-09] VISUAL CAPTURE" />

            <Button
                android:id="@+id/implicitIntentsButton"
                style="@style/CyberpunkButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="showImplicitIntents"
                android:text="[EX-10] SYSTEM OVERRIDE" />

        </LinearLayout>

        <!-- Image Display Section -->
        <LinearLayout
            android:id="@+id/imageSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonsSection"
            android:background="@drawable/cyberpunk_card_background"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="// VISUAL DATA OUTPUT //"
                android:textColor="@color/cyber_neon_purple"
                android:fontFamily="monospace"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <ImageView
                android:id="@+id/selectedImage"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:background="@drawable/cyberpunk_input_background"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:elevation="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[NO IMAGE DATA DETECTED]"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="monospace"
                android:letterSpacing="0.1"
                android:layout_marginTop="8dp" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>