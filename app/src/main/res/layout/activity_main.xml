<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arcade_pattern">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        tools:context=".MainActivity">

        <!-- Title Card -->
        <LinearLayout
            android:id="@+id/titleCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/arcade_card_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚡ INTENT ARCADE ⚡"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/neon_cyan"
                android:gravity="center"
                android:fontFamily="monospace"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*** RETRO GAMING STYLE ***"
                android:textSize="14sp"
                android:textColor="@color/neon_green"
                android:gravity="center"
                android:fontFamily="monospace"
                android:textStyle="italic" />

        </LinearLayout>

        <!-- Input Section -->
        <LinearLayout
            android:id="@+id/inputSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleCard"
            android:background="@drawable/arcade_card_bg"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*** INPUT DATA ***"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/neon_yellow"
                android:fontFamily="monospace"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/inputforintent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/arcade_input_bg"
                android:text="PLAYER_1"
                android:textSize="18sp"
                android:textColor="@color/neon_green"
                android:hint="*** ENTER_MESSAGE ***"
                android:fontFamily="monospace"
                android:minHeight="60dp"
                android:gravity="center_vertical" />

        </LinearLayout>

        <!-- Exercise Buttons Section -->
        <LinearLayout
            android:id="@+id/buttonsSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inputSection"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*** SELECT LEVEL ***"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/neon_pink"
                android:fontFamily="monospace"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center" />

            <Button
                android:id="@+id/startintent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/arcade_button"
                android:onClick="onClick"
                android:text="LVL 6: EXPLICIT_INTENT"
                android:textColor="@color/arcade_text_dark"
                android:textSize="14sp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:elevation="4dp" />

            <Button
                android:id="@+id/sharebutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/arcade_button_blue"
                android:onClick="shareData"
                android:text="LVL 7: SHARE_DATA"
                android:textColor="@color/arcade_text_dark"
                android:textSize="14sp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:elevation="4dp" />

            <Button
                android:id="@+id/openBrowserButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/arcade_button_green"
                android:onClick="openBrowser"
                android:text="LVL 8: OPEN_BROWSER"
                android:textColor="@color/arcade_text_dark"
                android:textSize="14sp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:elevation="4dp" />

            <Button
                android:id="@+id/pickImageButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/arcade_button_yellow"
                android:onClick="pickImage"
                android:text="LVL 9: PICK_IMAGE"
                android:textColor="@color/arcade_text_dark"
                android:textSize="14sp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:elevation="4dp" />

            <Button
                android:id="@+id/implicitIntentsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/arcade_button_purple"
                android:onClick="showImplicitIntents"
                android:text="LVL 10: IMPLICIT_INTENTS"
                android:textColor="@color/arcade_text_dark"
                android:textSize="14sp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:elevation="4dp" />

        </LinearLayout>

        <!-- Image Display Section -->
        <LinearLayout
            android:id="@+id/imageSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonsSection"
            android:background="@drawable/arcade_card_bg"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*** SELECTED_SPRITE ***"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/neon_orange"
                android:fontFamily="monospace"
                android:layout_marginBottom="16dp" />

            <ImageView
                android:id="@+id/selectedImage"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:background="@drawable/arcade_card_bg"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:elevation="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*** NO_SPRITE_LOADED ***"
                android:textSize="12sp"
                android:textColor="@color/pixel_mid_gray"
                android:fontFamily="monospace"
                android:textStyle="italic"
                android:layout_marginTop="8dp" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>