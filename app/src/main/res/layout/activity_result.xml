<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/soft_gradient_background"
    android:padding="32dp">

    <!-- Header -->
    <TextView
        style="@style/SwissText.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RESULT"
        android:textSize="36sp"
        android:layout_marginBottom="8dp" />

    <TextView
        style="@style/SwissText.Subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data from previous activity"
        android:layout_marginBottom="48dp" />

    <!-- Received Data Display -->
    <TextView
        style="@style/SwissText.Body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RECEIVED DATA"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/displayintentextra"
        style="@style/SwissText.Body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sketch_input_field_selector"
        android:padding="16dp"
        android:layout_marginBottom="48dp" />

    <!-- Return Data Section -->
    <TextView
        style="@style/SwissText.Body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RETURN DATA"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/returnValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sketch_input_field_selector"
        android:hint="Enter return value"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:minHeight="48dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginBottom="48dp">
        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/finishbutton"
        style="@style/SwissButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onFinishClick"
        android:text="Return to Main" />

</LinearLayout>
