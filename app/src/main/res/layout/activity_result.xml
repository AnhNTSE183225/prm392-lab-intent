<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/cyberpunk_background"
    android:padding="16dp">

    <!-- Header Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cyberpunk_card_background"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEURAL FEEDBACK"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/cyber_neon_yellow"
            android:fontFamily="monospace"
            android:layout_marginBottom="8dp"
            android:shadowColor="@color/cyber_neon_yellow"
            android:shadowRadius="8"
            android:shadowDx="0"
            android:shadowDy="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATA SYNC STATUS: ACTIVE"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="monospace"
            android:letterSpacing="0.1"
            android:gravity="center" />

    </LinearLayout>

    <!-- Received Data Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cyberpunk_card_background"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="// INCOMING DATA STREAM //"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/cyber_neon_blue"
            android:fontFamily="monospace"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/displayintentextra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cyberpunk_input_background"
            android:text="[AWAITING DATA TRANSMISSION]"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:fontFamily="monospace"
            android:minHeight="48dp"
            android:gravity="center"
            android:padding="12dp" />

    </LinearLayout>

    <!-- Return Data Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cyberpunk_card_background"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="// OUTPUT TRANSMISSION //"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/cyber_neon_green"
            android:fontFamily="monospace"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/returnValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cyberpunk_input_background"
            android:hint="ENTER RESPONSE DATA..."
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:fontFamily="monospace"
            android:minHeight="48dp"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">
            <requestFocus />
        </EditText>

    </LinearLayout>

    <!-- Action Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/finishButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CyberpunkButtonStyle"
            android:text="[TERMINATE SESSION]"
            android:onClick="onFinishClick"
            android:paddingLeft="32dp"
            android:paddingRight="32dp" />

    </LinearLayout>

</LinearLayout>
