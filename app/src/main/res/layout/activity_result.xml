<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/arcade_pattern"
    android:padding="24dp">

    <!-- Header Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/arcade_card_bg"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*** RESULT_SCREEN ***"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/neon_cyan"
            android:fontFamily="monospace"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*** DATA_TRANSFER_COMPLETE ***"
            android:textSize="12sp"
            android:textColor="@color/neon_green"
            android:fontFamily="monospace"
            android:textStyle="italic"
            android:gravity="center" />

    </LinearLayout>

    <!-- Received Data Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/arcade_card_bg"
        android:orientation="vertical"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*** RECEIVED_DATA ***"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/neon_yellow"
            android:fontFamily="monospace"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/displayintentextra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INPUT_DATA"
            android:textSize="16sp"
            android:textColor="@color/neon_green"
            android:fontFamily="monospace"
            android:background="@drawable/arcade_input_bg"
            android:layout_marginBottom="16dp" />

    </LinearLayout>

    <!-- Return Value Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/arcade_card_bg"
        android:orientation="vertical"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*** SEND_REPLY ***"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/neon_orange"
            android:fontFamily="monospace"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/returnValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/arcade_input_bg"
            android:hint="*** ENTER_REPLY ***"
            android:textSize="16sp"
            android:textColor="@color/neon_green"
            android:fontFamily="monospace"
            android:minHeight="60dp"
            android:gravity="center_vertical">
            <requestFocus />
        </EditText>

    </LinearLayout>

    <!-- Action Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/finishButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arcade_button_green"
            android:text="RETURN_TO_MAIN"
            android:textColor="@color/arcade_text_dark"
            android:textSize="16sp"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:onClick="onFinishClick"
            android:elevation="4dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp" />

    </LinearLayout>

</LinearLayout>
