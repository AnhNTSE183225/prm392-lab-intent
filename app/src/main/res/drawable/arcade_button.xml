<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Shadow/depth -->
            <item android:top="0dp" android:left="0dp" android:right="4dp" android:bottom="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/pixel_shadow" />
                    <corners android:radius="0dp" />
                </shape>
            </item>
            <!-- Main button -->
            <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/arcade_pink" />
                    <corners android:radius="0dp" />
                    <stroke
                        android:width="2dp"
                        android:color="@color/pixel_highlight" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Normal state -->
    <item>
        <layer-list>
            <!-- Shadow/depth -->
            <item android:top="0dp" android:left="0dp" android:right="6dp" android:bottom="6dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/pixel_shadow" />
                    <corners android:radius="0dp" />
                </shape>
            </item>
            <!-- Main button -->
            <item android:top="0dp" android:left="0dp" android:right="6dp" android:bottom="6dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/neon_pink" />
                    <corners android:radius="0dp" />
                    <stroke
                        android:width="3dp"
                        android:color="@color/pixel_highlight" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>