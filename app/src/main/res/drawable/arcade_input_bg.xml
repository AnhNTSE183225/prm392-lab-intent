<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state -->
    <item android:state_focused="true">
        <layer-list>
            <!-- Shadow -->
            <item android:top="0dp" android:left="0dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/pixel_shadow" />
                    <corners android:radius="0dp" />
                </shape>
            </item>
            <!-- Main input -->
            <item android:top="0dp" android:left="0dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/retro_black" />
                    <corners android:radius="0dp" />
                    <stroke
                        android:width="2dp"
                        android:color="@color/neon_green" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Normal state -->
    <item>
        <layer-list>
            <!-- Shadow -->
            <item android:top="0dp" android:left="0dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/pixel_shadow" />
                    <corners android:radius="0dp" />
                </shape>
            </item>
            <!-- Main input -->
            <item android:top="0dp" android:left="0dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/retro_black" />
                    <corners android:radius="0dp" />
                    <stroke
                        android:width="2dp"
                        android:color="@color/neon_cyan" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>