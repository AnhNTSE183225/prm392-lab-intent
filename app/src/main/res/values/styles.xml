<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Swiss typography styles -->
    <style name="SwissText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/swiss_near_black</item>
    </style>

    <style name="SwissText.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="SwissText.Subtitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/swiss_dark_gray</item>
    </style>

    <style name="SwissText.Body">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SwissText.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/swiss_medium_gray</item>
    </style>

    <style name="SwissButton">
        <item name="android:background">@drawable/swiss_button_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="SwissButton.Accent">
        <item name="android:background">@drawable/swiss_accent_button_selector</item>
    </style>
</resources>
